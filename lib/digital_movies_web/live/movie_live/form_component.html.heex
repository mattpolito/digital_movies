<h2><%= @title %></h2>

<%= form_for @changeset, "#",
  [
    id: "movie-form",
    phx_target: @myself,
    phx_change: "validate",
    phx_submit: "save"
  ],
  fn f -> %>

  <%= label f, :title %>
  <%= text_input f, :title %>
  <%= error_tag f, :title %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
<% end %>
