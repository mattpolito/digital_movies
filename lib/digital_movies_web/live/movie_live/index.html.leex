<h1>Listing Movies</h1>

<%= if @live_action in [:new, :edit] do %>
  <%= live_modal @socket, DigitalMoviesWeb.MovieLive.FormComponent,
    id: @movie.id || :new,
    title: @page_title,
    action: @live_action,
    movie: @movie,
    return_to: Routes.movie_index_path(@socket, :index) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>
        <a href="#" phx-click="toggle-sort" phx-value-sort-by="title">
          Title
          <%= if elem(@sort_by, 0) == "title" do %>
            <%= if elem(@sort_by, 1) == :asc do %>
              ðŸ‘†
            <% else %>
              ðŸ‘‡
            <% end %>
          <% end %>
        </a>
      </th>
      <th>
        <a href="#" phx-click="toggle-sort" phx-value-sort-by="count_listings">
          # Listings
          <%= if elem(@sort_by, 0) == "count_listings" do %>
            <%= if elem(@sort_by, 1) == :asc do %>
              ðŸ‘†
            <% else %>
              ðŸ‘‡
            <% end %>
          <% end %>
        </a>
      </th>
      <th>
        <a href="#" phx-click="toggle-sort" phx-value-sort-by="max_inserted_at">
          Recent Listing
          <%= if elem(@sort_by, 0) == "max_inserted_at" do %>
            <%= if elem(@sort_by, 1) == :asc do %>
              ðŸ‘†
            <% else %>
              ðŸ‘‡
            <% end %>
          <% end %>
        </a>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody id="movies">
    <%= for %{movie: movie, listings_count: listings_count, recent_listing: recent_listing} <- @movies do %>
      <tr id="movie-<%= movie.id %>">
        <td><%= live_redirect movie.title, to: Routes.movie_show_path(@socket, :show, movie) %></td>
        <td><%= listings_count %></td>
        <td><%= NaiveDateTime.to_date(recent_listing) %></td>
        <td>
          <span><%= live_patch "Edit", to: Routes.movie_index_path(@socket, :edit, movie) %></span>
          <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: movie.id, data: [confirm: "Are you sure?"] %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span><%= live_patch "New Movie", to: Routes.movie_index_path(@socket, :new) %></span>
